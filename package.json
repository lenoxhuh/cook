{
  "name": "the-humanitarian-journal",
  "version": "1.0.0",
  "scripts": {
    "client": "cd client && yarn start",
    "server": "nodemon server.js",
    "begin": "concurrently --kill-others-on-fail \"yarn db\" \"yarn server\" \"yarn client\"",
    "db": "mongod --dbpath=./data",
    "dev": "env NODE_ENV=development yarn begin",
    "start": "node server.js",
    "heroku-postbuild": "cd client && npm install && npm install --only=dev --no-shrinkwrap && npm run build"
  },
  "dependencies": {
    "bcrypt": "^3.0.0",
    "bluebird": "^3.5.1",
    "body-parser": "^1.18.3",
    "cookie-parser": "^1.4.3",
    "dotenv": "^6.0.0",
    "express": "^4.16.3",
    "express-mongo-db": "^2.0.4",
    "express-session": "^1.15.6",
    "mongodb": "^3.1.3",
    "mongodb-autoincrement": "^1.0.1",
    "mongoose": "^5.2.9",
    "passport": "^0.4.0",
    "passport-local": "^1.0.0",
    "passport-local-mongoose": "^5.0.1",
    "validator": "^10.6.0"
  },
  "devDependencies": {
    "concurrently": "^3.5.0"
  },
  "engines": {
    "node": "8.9.3"
  }
}