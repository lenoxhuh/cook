{
  "name": "the-cooking-app",
  "version": "1.0.0",
  "scripts": {
    "client": "cd client && yarn start",
    "server": "nodemon server.js",
    "begin": "concurrently --kill-others-on-fail \"yarn db\" \"yarn server\" \"yarn client\"",
    "db": "mongod --dbpath=./data",
    "dev": "env NODE_ENV=development yarn begin",
    "start": "node server.js",
    "heroku-postbuild": "cd client && npm install && npm install --only=dev --no-shrinkwrap && npm run build"
  },
  "dependencies": {
    "bcrypt": "^3.0.0",
    "bluebird": "^3.5.5",
    "body-parser": "^1.19.0",
    "cookie-parser": "^1.4.4",
    "dotenv": "^6.2.0",
    "express": "^4.17.1",
    "express-mongo-db": "^2.0.4",
    "express-session": "^1.16.2",
    "mongodb": "^3.3.1",
    "mongodb-autoincrement": "^1.0.1",
    "mongoose": "^5.6.10",
    "passport": "^0.4.0",
    "passport-local": "^1.0.0",
    "passport-local-mongoose": "^5.0.1",
    "validator": "^10.11.0"
  },
  "devDependencies": {
    "concurrently": "^3.5.0"
  },
  "engines": {
    "node": "8.9.3"
  }
}
